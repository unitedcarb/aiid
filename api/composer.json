{
    "name": "aiid",
    "description": "A SLIM API for aiid",
    "keywords": ["aiid", "rest", "router", "psr7"],
    "homepage": "https://github.com/unitedcarb/aiid/",
    "license": "MIT",
    "authors": [
        {
            "name": "Mika Sue",
            "email": "info@mikasue.com",
            "homepage": "http://www.mikasue.com/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "tuupola/slim-basic-auth": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t api index.php",
        "test": "phpunit"
    }

}
